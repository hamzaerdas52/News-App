<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppBg"
    tools:context=".view.list.ListFragment">

    <include
        android:id="@+id/include_action_bar"
        layout="@layout/main_action_bar" />

    <include
        android:id="@+id/include_loading_view"
        layout="@layout/loading_item"/>

    <include
        android:id="@+id/include_error_view"
        layout="@layout/error_item"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/list_swipe_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/include_loading_view"
        app:layout_constraintEnd_toEndOf="@+id/include_loading_view"
        app:layout_constraintStart_toStartOf="@+id/include_loading_view"
        app:layout_constraintTop_toBottomOf="@+id/include_action_bar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/newsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/news_list_item" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>